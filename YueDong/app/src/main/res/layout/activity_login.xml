<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/lightPrimaryColor"
        android:id="@+id/transaction_login"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="@android:color/white"
                  android:id="@id/Login"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="vertical">
        <RelativeLayout android:layout_height="50.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_width="fill_parent">
            <ImageView
                    android:id="@+id/image1"
                    android:gravity="center|right"
                    android:layout_alignParentRight="true"
                    android:layout_height="50.0dip"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:visibility="gone"/>
            <AutoCompleteTextView
                    android:background="@android:color/white"
                    android:id="@+id/username"
                    android:hint="手机号"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toLeftOf="@+id/image1"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
            />
        </RelativeLayout>
        <LinearLayout android:background="@color/dividColor" android:layout_width="fill_parent"
                      android:layout_height="1.0dip" android:layout_marginLeft="15.0dip"
                      android:layout_marginRight="15.0dip"/>
        <RelativeLayout android:layout_height="50.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_width="fill_parent">
            <ImageView
                    android:gravity="center|right"
                    android:id="@+id/image2"
                    android:layout_alignParentRight="true"
                    android:layout_height="50.0dip"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:visibility="gone"/>
            <EditText
                    android:background="@android:color/white"
                    android:hint="密码"
                    android:id="@+id/password"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toLeftOf="@+id/image2"
                    android:layout_width="fill_parent"
                    android:singleLine="true"/>
        </RelativeLayout>
        <TextView
                android:background="@color/darkPrimaryColor"
                android:gravity="center"
                android:id="@+id/logintv"
                android:layout_height="60.0dip"
                android:layout_width="fill_parent"
                android:text="登陆"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/login_logo_layout_v"
                    android:layout_above="@id/Login"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
        <LinearLayout android:gravity="center"
                      android:layout_centerInParent="true"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent"
                      android:background="@mipmap/login">

        </LinearLayout>
        <TextView
                android:gravity="center"
                android:id="@+id/huatai_login_tip"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_width="fill_parent"
                android:text="悦动"
                android:textSize="14.0sp"/>
    </RelativeLayout>
</RelativeLayout>