<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.yuedong.app.activity.MessageActivity"
                android:background="@color/defaultBackgroud">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include layout="@layout/layout_title"
                 android:id="@+id/msgTitle"
                 android:layout_height="56dp"
                 android:layout_width="match_parent"
        />
        <ListView
                android:id="@+id/messageListview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="3dp"
                android:scrollbarStyle="outsideOverlay"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7fd8d8d8"
                android:id="@+id/viewdivide"/>
        <com.jialin.chat.MessageInputToolBox
                android:id="@+id/messageInputToolBox"
                android:layout_width="match_parent"
                android:layout_height="56dp"
        />
    </LinearLayout>

</RelativeLayout>
