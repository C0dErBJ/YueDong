<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroud"
                tools:context="com.yuedong.app.activity.PersonalDetailActivity">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"/>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/iv_user"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector">
                <TextView
                        android:id="@+id/tv_avtor_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="头像"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>
                <ImageView
                        android:id="@+id/head"
                        android:layout_toLeftOf="@+id/iv_avator_more"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_account_circle_black_48dp"/>

                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_avator_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>


            </RelativeLayout>
            <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="24px"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/rl_nickname">

                <TextView
                        android:id="@+id/tv_nickname_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="昵称"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_nickname_more"
                        android:text=""
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>
                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_nickname_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DBDBDB"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/rl_sex">

                <TextView
                        android:id="@+id/tv_sex_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="性别"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_sex_more"
                        android:text=""
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>
                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_sex_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DBDBDB"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/rl_age">

                <TextView
                        android:id="@+id/tv_age_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="年龄"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_age_more"
                        android:text=""
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>
                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_age_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DBDBDB"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/rl_hobby">

                <TextView
                        android:id="@+id/tv_hobby_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="爱好"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>


                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_hobby_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DBDBDB"/>
            </RelativeLayout>
            <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="24px"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/rl_spacetime">

                <TextView
                        android:id="@+id/tv_spacetime_temp"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="空闲时间"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>


                <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_spacetime_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/right"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
