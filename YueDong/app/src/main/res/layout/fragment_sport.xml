<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.yuedong.app.activity.SportFragment">

    <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"

            android:text="开始"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/ic_circle_pause"
            android:id="@+id/startControl"
            android:layout_gravity="center_horizontal|bottom"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:layout_marginLeft="24dp"
            android:text="结束"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/ic_circle_stop"
            android:id="@+id/endControl"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|left|bottom"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:text="暂停"
            android:textColor="@color/white"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:background="@drawable/ic_circle"
            android:id="@+id/pauseControl"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|bottom|right"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="160dp"
            android:background="#a0a0a0"
            >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="运动时间: "
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:background="@android:color/transparent"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:id="@+id/timeControl"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="200dp"
            android:background="#a0a0a0">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="运动距离: "
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:background="@android:color/transparent"

                  android:gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 km"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:id="@+id/disControl"
                />
    </LinearLayout>


</FrameLayout>
